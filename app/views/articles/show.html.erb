<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <button><%= link_to "Edit", edit_article_path(@article) %></button>
  <%= form_tag(article_path(@article), method: :delete) do %>
    <%= submit_tag "Delete", data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
